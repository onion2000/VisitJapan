<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="#FFFFFF"
    android:clickable="false"
    card_view:cardCornerRadius="0dp" >


    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:paddingBottom="10dp"
            >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vocab_hiragana"
            android:id="@+id/vocab_hiragana_text"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vocab_romaji"
                android:id="@+id/vocab_romaji_text"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
            android:layout_below="@+id/vocab_hiragana_text"
            android:layout_alignStart="@+id/vocab_hiragana_text"
            android:paddingLeft="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vocab_meaning"
                android:id="@+id/vocab_meaning_text"
                android:textSize="15dp"
                android:maxLines="2"
                android:lines="2"
                android:layout_below="@+id/vocab_romaji_text"
                android:layout_alignStart="@+id/vocab_romaji_text"
                android:paddingLeft="10dp"
                />

    </RelativeLayout>


</android.support.v7.widget.CardView>