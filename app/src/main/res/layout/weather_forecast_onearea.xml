<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonLinearLayout"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Day"
            android:id="@+id/other_day_button" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Location"
            android:id="@+id/other_location_button"
            android:layout_marginLeft="100dp"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.06">

        <TextView
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:text="ABC DEF-5"
            android:id="@+id/date"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_weight="0.95"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="151dp"
            android:layout_height="45dp"
            android:text="HK"
            android:id="@+id/location"
            android:textSize="30dp"
            android:gravity="center_vertical|center"
            android:textStyle="bold"
            android:layout_marginLeft="50dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weather_image"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.54"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp" />

    <TextView
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:text="xx/xx"
        android:id="@+id/temperature"
        android:layout_marginLeft="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="50dp"
        android:textSize="30dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--%"
        android:id="@+id/prob_rain"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03"
        android:textSize="30dp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Highest Temp/ Lowest Temp"
        android:id="@+id/decp1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.03"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Probability of Precipitation"
        android:id="@+id/decp2"
        android:layout_gravity="center_horizontal|bottom|left"
        android:allowUndo="false"
        android:autoText="false"
        android:gravity="center_horizontal" />

</LinearLayout>